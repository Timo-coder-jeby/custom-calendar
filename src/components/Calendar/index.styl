.calendar_wrap
  height 100vh
  overflow-y hidden
  .week
    display flex
    line-height 16px
    font-size 16px
    align-items center
    justify-content space-around
    background #fff
    padding 0 15px
    & > li
      text-align center
      line-height 40px
      &.weekend
        color red
  .warp
    background #fff
    padding 0 15px
    height calc(100vh - 80px)
    overflow-y hidden
    .items
      height calc(100vh - 28px - 60px)
      overflow-y auto
      .date
        color #141e25
        height 30px
        line-height 30px
        font-size 16px
        text-align center
        position sticky
        left: 0
        top: 0
        z-index 99
        background #fff
      .cells
        display flex
        flex-wrap wrap
        .cell
          width: calc(100% / 7)
          height: 48px;
          line-height: 48px;
          text-align: center;
          font-size:16px;
          position: relative;
          &.noChecked
            opacity .5
          .slot
            position absolute
            left 50%
            bottom 2px
            transform translateX(-50%)
            font-size 10px
            line-height 10px
            .week
              color #6417FF
            .every
              color #02d644
          &.today
            color #fff
            background #03a9f4
            border-radius 10px
          .corner
            position: absolute;
            left: 50%;
            bottom: 2px;
            transform: translateX(-50%);
            font-size: 10px;
            line-height: 10px;
            white-space: nowrap;
            z-index: 1;
            background #6417FF
          &.gray
            color: #ccc;

          &.active
            background: rgba(100,23,255,0.04);

          &.active.active-radius
            background: #6417FF;
            color: #fff;

          &.active-start
            border-top-left-radius: 16px;
            border-bottom-left-radius: 16px;
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            background: #6417FF;
            color: #fff;

          &.active-end
            border-top-right-radius: 16px;
            border-bottom-right-radius: 16px;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            background: #6417FF;
            color: #fff;
